{
  "manifest_version": 3,
  "name": "Sentence Stepper",
  "version": "0.3.0",
  "description": "Step through page text sentence by sentence.",
  "permissions": ["storage", "scripting", "activeTab"],
  "action": { "default_title": "Sentence Stepper" },
  "background": { "service_worker": "background.js" },

  "icons": {
    "16":  "icons/icon16.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [{
  "resources": [
    "assets/ui-icons/*",
    "assets/ui-icons/pos-icons/*",
    "assets/images/*",
    "sstep/styles/panel.css"
  ],
  "matches": ["<all_urls>"]
}]
}
